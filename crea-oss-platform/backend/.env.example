# Application
APP_NAME="CREA OSS Platform"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://crea:crea@localhost:5432/crea_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Vector Database (Qdrant)
VECTOR_DB_TYPE=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=crea_documents

# Embedding Model (Open-Source)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# LLM Configuration
DEFAULT_LLM_BACKEND=hf_local
DEFAULT_MODEL_ID=mistralai/Mistral-7B-Instruct-v0.2

# HuggingFace Local Backend
HF_DEVICE=cpu
HF_LOAD_IN_8BIT=false
HF_LOAD_IN_4BIT=false

# Text Generation Inference (TGI) Backend
TGI_URL=

# vLLM Backend
VLLM_URL=

# llama.cpp Backend
LLAMACPP_URL=

# LLM Generation Parameters
LLM_MAX_NEW_TOKENS=1024
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_TOP_K=50

# RAG Configuration
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Chat Configuration
CHAT_HISTORY_TTL=600
CHAT_HISTORY_MAX_MESSAGES=20

# Security
SECRET_KEY=change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Fine-tuning Data Export
EXPORT_DATA_DIR=./exports

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
