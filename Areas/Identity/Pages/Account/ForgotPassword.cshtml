@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Reset your password";
}

<div class="flex h-full w-full items-center justify-center @(Model.EmailSent ? "opacity-20" : "")" id="forgotpassword-page">
    <div class="flex w-2/5 flex-col items-center rounded-2xl shadow-xl">
        <h1 class="mb-4 mt-6 text-2xl font-bold">@ViewData["Title"]</h1>
        <h2 class="mb-8 text-xs font-bold">We'll send you reset instructions</h2>
        <div class="flex w-3/5 flex-col">
            <form class="mb-8 flex flex-col" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
                <div class="form-field !mb-12">
                    <label asp-for="Input.Email" class="form-label">Email <span class="text-red-500">*</span></label>
                    <input asp-for="Input.Email" class="input-form" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-red-500"></span>
                </div>
                <button type="submit" class="button self-center">Reset Password</button>
            </form>
            <a href="/Identity/Account/Login" class="mb-8 self-center text-teal-400 underline">Back to log in</a>
        </div>
    </div>
</div>

@if (Model.EmailSent)
{
    <div class="z-10 absolute left-0 top-0 flex h-full w-full items-center justify-center bg-transparent" id="forgotpassword-modal">
        <div class="flex w-1/3 flex-col items-center justify-center rounded-2xl bg-white shadow-xl">
            <i class="fa-solid fa-xmark fa-lg m-8 self-end text-teal-400 hover:cursor-pointer" id="close-forgotpassword-modal"></i>
            <i class="fa-solid fa-circle-check fa-2xl mb-10 text-teal-400"></i>
            <h1 class="mb-4 text-xl font-bold">
                Request sent !
            </h1>
            <p class="mb-16">You have received an email with instructions on how to set a new password</p>
        </div>
    </div>
}

<script>
    document.addEventListener("DOMContentLoaded", () => {
            const closeCrossEl = document.getElementById('close-forgotpassword-modal');
            const forgotPasswordModal = document.getElementById('forgotpassword-modal');
            const forgotPasswordPage = document.getElementById('forgotpassword-page');

            closeCrossEl.onclick = () => {
                forgotPasswordModal.classList.add('hidden');
                forgotPasswordPage.classList.remove('opacity-20');
            }
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}